<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/header"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <ImageView
                android:id="@+id/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/body1"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/header"
                />
            <ImageView
                android:id="@+id/body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/body2"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/body1"
                />
            <ImageView
                android:id="@+id/body3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/body3"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/body2"
                />
            <ImageView
                android:id="@+id/feet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/feet"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/body3"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>